{
  "name": "npm-dashboard",
  "description": "Dashboard to show download counts for any repositories you want.",
  "version": "1.0.0",
  "type": "module",
  "author": {
    "name": "Justin Lettau",
    "email": "me@justinlettau.com",
    "url": "https://justinlettau.com"
  },
  "license": "MIT",
  "homepage": "https://justinlettau.github.io/npm-dashboard",
  "repository": {
    "type": "git",
    "url": "https://github.com/justinlettau/npm-dashboard"
  },
  "bugs": {
    "url": "https://github.com/justinlettau/npm-dashboard/issues"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "predeploy": "npm run build && cd. > build/.nojekyll",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.26.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.23",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.3.0",
    "vitest": "^0.34.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
